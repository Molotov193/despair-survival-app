{
  "name": "despair-survival-app",
  "version": "1.6.21",
  "description": "A hardcore survival simulation game.",
  "main": "main.js",
"scripts": {
  "start": "electron .",
  "clean": "rimraf dist",
  "build": "npm run clean && electron-builder",
  "publish": "electron-builder --publish always"
},
  "repository": {
    "type": "git",
    "url": "https://github.com/Molotov193/despair-survival-app.git"
  },
  "author": "YourName",
  "license": "ISC",
"dependencies": {
    "electron-store": "^9.0.0"
  },
  "devDependencies": {
    "electron": "^31.0.1",
    "electron-builder": "^24.13.3",
    "rimraf": "^6.0.1"
  },
  "build": {
    "appId": "com.yourname.despairsurvival",
    "productName": "DespairSurvival",
    "files": [
      "main.js",
      "index.html",
      "package.json",
      "locales",
      "sounds",
      "images"
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.ico",
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "mac": {
      "target": "dmg",
      "icon": "icon.icns"
    }
  }
}
