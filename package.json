{
  "name": "despair-survival-app",
  "version": "1.3.76",
  "description": "A hardcore survival simulation game.",
  "main": "main.js",
"scripts": {
  "start": "electron .",
  "build": "electron-builder --clean",
  "publish": "electron-builder --publish always"
},
  "repository": {
    "type": "git",
    "url": "https://github.com/Molotov193/despair-survival-app.git"
  },
  "author": "YourName",
  "license": "ISC",
  "dependencies": {
    "electron-log": "^5.1.5",
    "electron-store": "^9.0.0",
    "electron-updater": "^6.2.1"
  },
  "devDependencies": {
    "electron": "^31.0.1",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.yourname.despairsurvival",
    "productName": "DespairSurvival",
    "publish": {
      "provider": "github",
      "owner": "Molotov193",
      "repo": "despair-survival-app"
    },
"files": [
  "main.js",
  "index.html",
  "package.json",
  "locales",
  "sounds",
  "images"
],
    "win": {
      "target": "nsis",
      "icon": "icon.ico",
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "mac": {
      "target": "dmg",
      "icon": "icon.icns"
    }
  }
}